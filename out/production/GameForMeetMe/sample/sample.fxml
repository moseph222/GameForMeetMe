<GridPane fx:controller="sample.Controller_start" onKeyPressed="#onKeyPress"
          xmlns:fx="https://javafx.com/fxml" alignment="center" hgap="10" vgap="10" style="-fx-background-color:purple">


    <TextField>

    </TextField>
    <StackPane>
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0" >
            <graphic>
                <ImageView>
                    <Image url="@LogoFeud.png" requestedWidth="300" requestedHeight="200"/>
                </ImageView>
            </graphic>
        </Label>
    </StackPane>

    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Team 1:" style="-fx-text-fill:white"/>
    <TextField fx:id="Team1" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label GridPane.rowIndex="3" GridPane.columnIndex="0" text="Team 2:" style="-fx-text-fill:white"/>
    <TextField fx:id="Team2" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

    <Label fx:id="StartButton" GridPane.rowIndex="6" GridPane.columnIndex="0" onMouseClicked="#onButtonClicked">
        <graphic>
            <ImageView>
                <Image url="@StartButton.png" />
            </ImageView>
        </graphic>
    </Label>


</GridPane>