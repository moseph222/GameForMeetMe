<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane id="root" fx:controller="familyfeud.Controller_gameStage" xmlns:fx="https://javafx.com/fxml" alignment="center" >
    <columnConstraints>
        <ColumnConstraints percentWidth="50.0"/>
        <ColumnConstraints percentWidth="50.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="15.0"/>
        <RowConstraints percentHeight="60.0"/>
        <RowConstraints percentHeight="25.0"/>
    </rowConstraints>

    <!-- Question -->
    <VBox styleClass="header" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Label fx:id="gameRound" text="" style="-fx-font-size:14; -fx-text-fill:white"/>
        <Label fx:id="question" text="" style="-fx-text-fill:white;" wrapText="true" textAlignment="CENTER" maxWidth="280"/>
    </VBox>

    <!-- Hidden Answers -->
    <StackPane styleClass="body" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <!--StackPane is necessary to draw strike over answers. See controller-->
        <VBox fx:id="ansVBox" alignment="CENTER" spacing="10">
            <!--Content generated by controller-->
        </VBox>
    </StackPane>

    <!-- Scoring and Timing -->
    <GridPane styleClass="footer" alignment="center" vgap="3" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <StackPane GridPane.rowIndex="0" GridPane.columnIndex="2" >
            <Label>
                <graphic>
                    <ImageView>
                        <Image url="@../images/RoundPoints.png" />
                    </ImageView>
                </graphic>
            </Label>
            <Label fx:id="roundPoints" text="000"  style="-fx-font-size:22; -fx-text-fill: white;"/>
        </StackPane>


        <StackPane GridPane.rowIndex="0" GridPane.columnIndex="1" >
            <Label>
                <graphic>
                    <ImageView >
                        <Image url="@../images/RoundPoints.png" requestedWidth="50" requestedHeight="30"/>
                    </ImageView>
                </graphic>
            </Label>
            <Label fx:id="Team1Timer" text="0"  style="-fx-font-size:22; -fx-text-fill: white;"/>
        </StackPane>

        <GridPane GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="CENTER">
            <Label fx:id="team1Name" text="Team 1" style="-fx-font-size:15; -fx-text-fill: white;"/>
        </GridPane>

        <StackPane GridPane.rowIndex="0" GridPane.columnIndex="3" >
            <Label>
                <graphic>
                    <ImageView >
                        <Image url="@../images/RoundPoints.png" requestedWidth="50" requestedHeight="30"/>
                    </ImageView>
                </graphic>
            </Label>
            <Label fx:id="Team2Timer" text="0"  style="-fx-font-size:22; -fx-text-fill: white;"/>
        </StackPane>




        <!--        =================== THREE ATTEMPTS =================================-->

        <GridPane fx:id="team1StrikeIndicators" hgap="1" GridPane.rowIndex="2" GridPane.columnIndex="1" alignment="CENTER" >

        </GridPane>

        <StackPane GridPane.rowIndex="3" GridPane.columnIndex="1" alignment="CENTER">
            <Label>
                <graphic>
                    <ImageView>
                        <Image url="@../images/RedTeam.png"/>
                    </ImageView>
                </graphic>
            </Label>
            <Label fx:id="team1Points" text="000"  style="-fx-font-size:22; -fx-text-fill: white;"/>
        </StackPane>

        <GridPane fx:id="team2StrikeIndicators" hgap="1" GridPane.rowIndex="2" GridPane.columnIndex="3" alignment="CENTER" >

        </GridPane>

        <GridPane GridPane.rowIndex="1" GridPane.columnIndex="3" alignment="CENTER">
            <Label  fx:id="team2Name" text="Team 2" style="-fx-font-size:15; -fx-text-fill: white;"/>
        </GridPane>

        <StackPane GridPane.rowIndex="3" GridPane.columnIndex="3" alignment="CENTER">
            <Label>
                <graphic>
                    <ImageView>
                        <Image url="@../images/BlueTeam.png"/>
                    </ImageView>
                </graphic>
            </Label>
            <Label fx:id="team2Points" text="000" style="-fx-font-size:22; -fx-text-fill: white;"/>
        </StackPane>
    </GridPane>

    <!--    ====================== RIGHT PANE ===============================-->

    <!-- Header -->
    <VBox styleClass="header" alignment="center" GridPane.rowIndex="0" GridPane.columnIndex="1">
        <Label fx:id="currentTeam" text="" style="-fx-font-size:18; -fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Label fx:id="currentPlayer" text="" style="-fx-font-size:18; -fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </VBox>

    <!-- Answers -->
    <VBox fx:id="hostView" styleClass="body" alignment="center" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <!--Content generated by controller-->
    </VBox>

    <!-- Host Controls -->
    <FlowPane styleClass="footer" alignment="center" hgap="10" vgap="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button fx:id="LoadQuestions" styleClass="hostButton" text="Load" onMouseClicked="#LoadQuestions" />
        <Button fx:id="timerButton" styleClass="hostButton" disable="true" text="Start Timer" onMouseClicked="#startTiming" />
        <Button fx:id="strikeButton" styleClass="hostButton" disable="true" text="Strike" onMouseClicked="#strike" />
        <Button fx:id="revealButton" styleClass="hostButton" disable="true" text="Reveal All" onMouseClicked="#revealAnswers" />
        <Button fx:id="nextQuesButton" styleClass="hostButton" disable="true" text="Next Question"  onMouseClicked="#goToNextQuestion" />
    </FlowPane>
</GridPane>